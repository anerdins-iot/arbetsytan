datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

// ─────────────────────────────────────────
// Platform
// ─────────────────────────────────────────

model Tenant {
  id               String         @id @default(cuid())
  name             String
  orgNumber        String?
  address          String?
  stripeCustomerId String?        @unique
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  memberships  Membership[]
  projects     Project[]
  invitations  Invitation[]
  subscription Subscription?
  notificationPreferences NotificationPreference[]
  pushSubscriptions       PushSubscription[]
  emailTemplates          EmailTemplate[]
  documentChunks DocumentChunk[]
  noteCategories NoteCategory[]
  fileAnalyses   FileAnalysis[]
  timeEntries    TimeEntry[]
  emailLogs      EmailLog[]
  emailChunks    EmailChunk[]
  emailConversations  EmailConversation[]
}

model User {
  id                   String    @id @default(cuid())
  name                 String?
  email                String    @unique
  emailVerified        DateTime?
  image                String?
  phone                String?
  bio                  String?
  password             String?
  isSuperAdmin         Boolean   @default(false)
  locale               String    @default("sv")
  pushToken            String?
  lockedAt             DateTime?
  failedLoginAttempts  Int       @default(0)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  memberships      Membership[]
  accounts         Account[]
  sessions         Session[]
  conversations    Conversation[]
  aiMessages       AIMessage[]
  notifications    Notification[]
  activityLogs     ActivityLog[]
  notificationPreferences NotificationPreference[]
  pushSubscriptions       PushSubscription[]
  notes            Note[]
  files            File[]
  documentChunks   DocumentChunk[]
  fileAnalyses     FileAnalysis[]
  emailLogs           EmailLog[]
  emailChunks         EmailChunk[]
  emailConversations  EmailConversation[]
}

model Membership {
  id          String   @id @default(cuid())
  role        Role     @default(WORKER)
  permissions Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  projectMembers ProjectMember[]
  assignedTasks TaskAssignment[]

  @@unique([userId, tenantId])
}

enum Role {
  ADMIN
  PROJECT_MANAGER
  WORKER
}

// ─────────────────────────────────────────
// Auth.js
// ─────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─────────────────────────────────────────
// Invitations
// ─────────────────────────────────────────

model Invitation {
  id        String           @id @default(cuid())
  email     String
  role      Role             @default(WORKER)
  status    InvitationStatus @default(PENDING)
  token     String           @unique @default(cuid())
  expiresAt DateTime
  createdAt DateTime         @default(now())

  tenantId    String
  tenant      Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  invitedById String

  @@unique([email, tenantId])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

// ─────────────────────────────────────────
// Projects
// ─────────────────────────────────────────

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(ACTIVE)
  address     String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  projectMembers ProjectMember[]
  tasks           Task[]
  files           File[]
  chunks          DocumentChunk[]
  conversations   Conversation[]
  aiMessages      AIMessage[]
  notifications  Notification[]
  activityLogs    ActivityLog[]
  timeEntries     TimeEntry[]
  notes           Note[]
  automations     Automation[]
  messages       Message[]
  fileAnalyses   FileAnalysis[]
  emailLogs      EmailLog[]
  emailChunks    EmailChunk[]
  emailConversations  EmailConversation[]
}

model ProjectMember {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  projectId    String
  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  membershipId String
  membership   Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)

  @@unique([projectId, membershipId])
}

enum ProjectStatus {
  ACTIVE
  PAUSED
  COMPLETED
  ARCHIVED
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority    Priority   @default(MEDIUM)
  deadline    DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  assignments TaskAssignment[]
  comments    Comment[]
  timeEntries TimeEntry[]
  notifications Notification[]
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model TaskAssignment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  taskId       String
  task         Task       @relation(fields: [taskId], references: [id], onDelete: Cascade)
  membershipId String
  membership   Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)

  @@unique([taskId, membershipId])
}

// ─────────────────────────────────────────
// Files
// ─────────────────────────────────────────

model File {
  id        String   @id @default(cuid())
  name      String
  type      String
  size      Int
  bucket    String
  key       String
  ocrText   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  uploadedById String
  uploadedBy   User   @relation(fields: [uploadedById], references: [id])

  userDescription String? // Användarens egen beskrivning
  aiAnalysis      String? // AI-genererad analys
  label           String? // Formaterad etikett

  // Versioning: parent = previous version, children = newer versions
  parentFileId  String?
  parentFile    File?     @relation("FileVersions", fields: [parentFileId], references: [id], onDelete: SetNull)
  childVersions File[]    @relation("FileVersions")
  versionNumber Int       @default(1)

  chunks DocumentChunk[]
  analyses FileAnalysis[]
}

// ─────────────────────────────────────────
// File Analysis (AI-genererade analyser)
// ─────────────────────────────────────────

model FileAnalysis {
  id        String   @id @default(cuid())
  content   String   // Analysresultatet
  prompt    String?  // Frågan/instruktionen (null = generell analys)
  model     String?  // T.ex. "claude-sonnet-4-5-20250514"
  type      String   @default("auto") // "auto" | "manual" | "agent"
  createdAt DateTime @default(now())

  fileId    String
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)

  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([fileId])
  @@index([tenantId])
  @@index([projectId])
  @@index([createdAt])
}

// ─────────────────────────────────────────
// Embeddings (pgvector)
// ─────────────────────────────────────────

/// Vektorsökning via pgvector. Se AI.md för arkitektur.
/// Tenant-isolerad: alla rader har tenantId. Projektfiler har projectId; personliga filer har userId.
model DocumentChunk {
  id        String                    @id @default(cuid())
  content   String
  embedding Unsupported("vector(1536)")?
  metadata  Json                      @default("{}")
  page      Int?
  createdAt DateTime                  @default(now())

  fileId    String
  file      File    @relation(fields: [fileId], references: [id], onDelete: Cascade)
  tenantId  String
  tenant    Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ─────────────────────────────────────────
// AI
// ─────────────────────────────────────────

model Conversation {
  id        String           @id @default(cuid())
  type      ConversationType
  title     String?
  summary   String?
  provider  AIProvider       @default(CLAUDE)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  messages Message[]
}

enum ConversationType {
  PERSONAL
  PROJECT // deprecated: project-AI removed; can be removed later
}

enum AIProvider {
  CLAUDE
  OPENAI
  MISTRAL
}

model Message {
  id        String      @id @default(cuid())
  role      MessageRole
  content   String
  createdAt DateTime    @default(now())

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  projectId      String?
  project        Project?     @relation(fields: [projectId], references: [id], onDelete: SetNull)
}

enum MessageRole {
  USER
  ASSISTANT
}

/// Can be removed later if no longer needed for notifications.
model AIMessage {
  id        String          @id @default(cuid())
  direction AIDirection
  type      String
  content   String
  read      Boolean         @default(false)
  createdAt DateTime        @default(now())

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  parentId  String?
  parent    AIMessage?  @relation("AIMessageThread", fields: [parentId], references: [id])
  replies   AIMessage[] @relation("AIMessageThread")
}

/// Can be removed later if AIMessage is removed.
enum AIDirection {
  PROJECT_TO_PERSONAL
  PERSONAL_TO_PROJECT
}

// ─────────────────────────────────────────
// Notifications
// ─────────────────────────────────────────

model Notification {
  id        String            @id @default(cuid())
  title     String
  body      String
  channel   NotificationChannel
  eventType NotificationEventType?
  read      Boolean           @default(false)
  sent      Boolean           @default(false)
  createdAt DateTime          @default(now())

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)
}

enum NotificationChannel {
  IN_APP
  PUSH
  EMAIL
}

enum NotificationEventType {
  TASK_ASSIGNED
  DEADLINE_SOON
  PROJECT_STATUS_CHANGED
  EMAIL_RECEIVED
}

model NotificationPreference {
  id        String   @id @default(cuid())
  pushEnabled               Boolean @default(false)
  emailTaskAssigned         Boolean @default(true)
  emailDeadlineTomorrow     Boolean @default(true)
  emailProjectStatusChanged Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, tenantId])
}

model EmailTemplate {
  id           String   @id @default(cuid())
  name         String
  subject      String
  htmlTemplate String   @db.Text
  variables    Json     @default("[]")
  locale       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name, locale])
  @@index([tenantId, locale])
}

model PushSubscription {
  id        String   @id @default(cuid())
  endpoint  String
  p256dhKey String
  authKey   String
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, endpoint])
}

// ─────────────────────────────────────────
// Comments
// ─────────────────────────────────────────

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  taskId   String
  task     Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  authorId String
}

// ─────────────────────────────────────────
// Activity Log (Audit Trail)
// ─────────────────────────────────────────

model ActivityLog {
  id        String   @id @default(cuid())
  action    String
  entity    String
  entityId  String
  metadata  Json     @default("{}")
  createdAt DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  actorId   String
  actor     User    @relation(fields: [actorId], references: [id], onDelete: Restrict)
}

// ─────────────────────────────────────────
// Time Tracking
// ─────────────────────────────────────────

model TimeEntry {
  id          String    @id @default(cuid())
  description String?
  minutes     Int
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  taskId    String?
  task      Task?   @relation(fields: [taskId], references: [id], onDelete: SetNull)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String

  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  entryType TimeEntryType @default(WORK)
}

enum TimeEntryType {
  WORK       // Vanligt arbete
  VACATION   // Semester
  SICK       // Sjukdom
  VAB        // Vård av barn
  PARENTAL   // Föräldraledighet
  EDUCATION  // Utbildning
  OTHER      // Övrigt
}

// ─────────────────────────────────────────
// Notes (Anteckningsbok)
// ─────────────────────────────────────────

model Note {
  id        String   @id @default(cuid())
  title     String   @default("")
  content   String   @db.Text
  category  String?
  isPinned  Boolean  @default(false)

  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId, createdAt])
  @@index([projectId, category])
  @@index([createdById, projectId])
}

// ─────────────────────────────────────────
// Automations (Scheduled Actions)
// ─────────────────────────────────────────

model Automation {
  id          String           @id @default(cuid())
  name        String
  description String?

  // Timing
  triggerAt   DateTime         // Next scheduled execution
  recurrence  String?          // Cron expression for recurring, null for one-time
  timezone    String           @default("Europe/Stockholm")

  // Action to execute (references AI tool system)
  actionTool   String          // Tool name, e.g., "createTask", "notify", "updateTask"
  actionParams Json            // Tool parameters as JSON

  // Status
  status      AutomationStatus @default(PENDING)

  // Scope - either user-level OR project-level
  projectId   String?
  project     Project?         @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Creator tracking
  createdBy   AutomationCreator @default(USER)
  sourceConversationId String?  // Link to AI conversation if created by AI

  // Ownership
  userId      String           // Owner of the automation
  tenantId    String           // Required for tenant isolation

  // Timestamps
  lastRunAt   DateTime?
  nextRunAt   DateTime?        // Calculated from recurrence
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Execution history
  logs        AutomationLog[]

  @@index([tenantId, status, triggerAt])
  @@index([userId, tenantId])
  @@index([projectId])
}

model AutomationLog {
  id           String                @id @default(cuid())
  status       AutomationLogStatus
  result       Json?                 // Tool execution result
  errorMessage String?
  executedAt   DateTime              @default(now())
  durationMs   Int?

  automationId String
  automation   Automation            @relation(fields: [automationId], references: [id], onDelete: Cascade)

  @@index([automationId, executedAt])
}

enum AutomationStatus {
  PENDING    // Waiting to be executed
  ACTIVE     // Recurring and active
  PAUSED     // Temporarily disabled
  COMPLETED  // One-time automation that has run
  FAILED     // Last execution failed
  CANCELLED  // Manually cancelled
}

enum AutomationCreator {
  USER       // Created by user via UI or explicit command
  AI         // Created automatically by AI agent
}

enum AutomationLogStatus {
  SUCCESS
  FAILED
  SKIPPED    // e.g., target entity no longer exists
}

// ─────────────────────────────────────────
// Note Categories (tenant-level)
// ─────────────────────────────────────────

model NoteCategory {
  id        String   @id @default(cuid())
  name      String
  slug      String
  color     String?
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, slug])
  @@index([tenantId])
}

// ─────────────────────────────────────────
// Billing
// ─────────────────────────────────────────

model Subscription {
  id                   String             @id @default(cuid())
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  trialEndsAt          DateTime?
  canceledAt           DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  tenantId String @unique
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
}

// ─────────────────────────────────────────
// Email Conversations (Inbox)
// ─────────────────────────────────────────

model EmailConversation {
  id       String   @id @default(cuid())
  tenantId String
  tenant   Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  externalEmail String
  externalName  String?

  trackingCode String @unique

  subject        String
  lastMessageAt  DateTime @default(now())
  unreadCount    Int      @default(0)
  isArchived     Boolean  @default(false)

  messages EmailMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId, userId])
  @@index([trackingCode])
}

model EmailMessage {
  id             String   @id @default(cuid())
  conversationId String
  conversation   EmailConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  emailLogId     String?  @unique
  emailLog       EmailLog? @relation(fields: [emailLogId], references: [id])

  direction  EmailDirection
  fromEmail   String
  fromName    String?
  toEmail     String

  subject   String
  bodyText  String?  @db.Text
  bodyHtml  String?  @db.Text

  isRead      Boolean   @default(false)
  sentAt      DateTime?
  receivedAt  DateTime?
  createdAt   DateTime  @default(now())

  @@index([conversationId])
}

// ─────────────────────────────────────────
// Email Logging
// ─────────────────────────────────────────

model EmailLog {
  id        String           @id @default(cuid())
  direction EmailDirection
  status    EmailStatus      @default(QUEUED)

  // Email metadata
  from           String
  to             Json         // Array of email addresses
  cc             Json?
  bcc            Json?
  subject        String
  body           String       @db.Text
  htmlBody       String?      @db.Text

  // Resend integration
  resendMessageId String?     @unique
  resendError     String?

  // Relations
  tenantId        String
  tenant          Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  userId          String
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId       String?
  project         Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)

  // Timestamps
  createdAt       DateTime    @default(now())
  sentAt          DateTime?
  deliveredAt     DateTime?
  bouncedAt       DateTime?
  failedAt        DateTime?

  // Relations
  attachments     EmailAttachment[]
  chunks          EmailChunk[]
  emailMessage    EmailMessage?

  @@index([tenantId, createdAt])
  @@index([tenantId, userId])
  @@index([tenantId, projectId])
  @@index([status])
  @@index([resendMessageId])
}

enum EmailDirection {
  INBOUND
  OUTBOUND
}

enum EmailStatus {
  QUEUED
  SENT
  DELIVERED
  BOUNCED
  FAILED
}

model EmailAttachment {
  id          String    @id @default(cuid())
  filename    String
  contentType String
  size        Int
  bucket      String
  key         String

  emailLogId  String
  emailLog    EmailLog  @relation(fields: [emailLogId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())

  @@index([emailLogId])
}

model EmailChunk {
  id         String                       @id @default(cuid())
  content    String                       @db.Text
  embedding  Unsupported("vector(1536)")?
  chunkIndex Int
  createdAt  DateTime                     @default(now())

  emailLogId String
  emailLog   EmailLog @relation(fields: [emailLogId], references: [id], onDelete: Cascade)

  tenantId   String
  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  projectId  String?
  project    Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([emailLogId])
  @@index([tenantId])
  @@index([projectId])
  @@index([userId])
}
